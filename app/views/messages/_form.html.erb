<%= form_with(model: message) do |f| %>
  <div class="form-group row">
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="col-xs-9">
      <%= f.text_field :content, class: 'form-control', placeholder: 'クイズを始めるには、 quiz と入力して下さい' %>
    </div>
    <div class="col-xs-3">
      <%= f.submit "送信", class: 'btn btn-success btn-block', id: 'submit_button' %>
    </div>
  </div>
<% end %>